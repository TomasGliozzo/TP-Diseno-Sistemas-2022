{{#partial "contenido"}}
    <section>
        <h2>Reporte</h2>
    </section>

    <div class="g-2" id="reporte_organizacion">
        <input id="anio" name="anio" value="{{anio}}" onchange="cambiarGrafico()">

        <div class="col" style="width:37%;">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h3 class="m-0">Composición HC total de una organización</h3>
                </div>

                <div class="card-body">
                    <div class="container">
                        <figure id="composicion-organizacion-chart" class="mt-4">
                        </figure>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <input id="path_reporte_composicion_organizacion" value="{{urlReporte}}" type="hidden">
{{/partial}}
{{>layout.hbs}}